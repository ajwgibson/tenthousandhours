
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">

        <div class="ibox-title">
          <% if @user.id? %>
          <h2>Update user details</h2>
          <% else %>
          <h2>Add a user</h2>
          <% end %>
        </div>

        <div class="ibox-content">
          <div class="row">
            <div class="col-sm-8">

              <p class="required-legend">
                Indicates a required field
              </p>

              <%= render partial: "layouts/errors", object: @user, as: 'form' %>

              <%= bootstrap_form_for(@user,
                      layout: :horizontal,
                      inline_errors: false,
                      html: { class: 'user-form' },
                      label_col: "col-sm-3",
                      control_col: "col-sm-9") do |f| %>

                <%= f.text_field :first_name, :label => 'First name' %>
                <%= f.text_field :last_name,  :label => 'Last name' %>
                <%= f.email_field :email,     :label => 'Email' %>
                <%= f.select :role,
                              options_for_select(User::ROLES, @user.role),
                              { prompt: "Please select a role..." } %>

                <% if !@user.id? %>
                  <%= f.password_field :password, :label => 'Password' %>
                  <%= f.password_field :password_confirmation, :label => 'Confirm password' %>
                <% end %>

                <div class="form-group" style="margin-top: 20px;">
                  <div class="col-sm-9 col-sm-offset-3">
                    <%= button_tag(type: "submit", class: "btn btn-primary") do %>
                      <i class="fa fa-check"></i> Save
                    <% end %>
                    <% if @user.id? %>
                      <%= link_to user_path, :class => 'btn btn-default' do %>
                        <i class="fa fa-times"></i> Cancel
                      <% end %>
                    <% else %>
                      <%= link_to users_path, :class => 'btn btn-default' do %>
                        <i class="fa fa-times"></i> Cancel
                      <% end %>
                    <% end %>
                  </div>
                </div>

              <% end %>

            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
