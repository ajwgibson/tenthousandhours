<div class="middle-box text-center loginscreen animated fadeInDown">
  <div>
    <div>
      <h1 class="logo-name">CCV</h1>
    </div>

    <h3>Forgot your password?</h3>

    <p>
      Enter your email address to receive instructions that will help you
      to reset your password.
    </p>

    <%= bootstrap_flash %>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "m-t") do |f| %>

      <div class="form-group">
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>

      <%= f.submit "Send me reset password instructions", class: "btn btn-primary block full-width m-b" %>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
