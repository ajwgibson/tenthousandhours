
<div class="row">
  <div class="col-lg-12">

    <div class="ibox float-e-margins">

      <div class="ibox-title">
        <div class="ibox-tools pull-right">
        </div>
        <h2>Projects</h2>
      </div>

      <div class="ibox-content" style="display: block;">

        <% if can? :create, Project %>
          <%= link_to new_project_path, :class => 'btn btn-primary btn-sm' do %>
            <i class="fa fa-plus"></i> Add a project
          <% end %>
        <% end %>

        <% if can? :import, Project %>
          <%= link_to projects_import_path, :class => 'btn btn-info btn-sm' do %>
            <i class="fa fa-upload"></i> Import projects from TypeForm
          <% end %>
        <% end %>

        <div class="table-responsive">
          <table class="table table-striped table-responsive">

            <thead>
              <tr>
                <th>Organisation name</th>
                <th>Organisation type</th>
                <th>Contact name</th>
                <th>Links</th>
              </tr>
            </thead>

            <tbody>
              <% @projects.each do |project| %>
              <tr>
                <td><%= project.organisation_name %> </td>
                <td><%= project.organisation_type %> </td>
                <td><%= project.contact_name %> </td>
                <td>
                  <%= link_to project_path(project), :class => '' do %>
                  <i class="fa fa-info-circle"></i> View details
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>

            <tfoot>
              <tr>
                <td colspan="6">
                  <div class="pull-right">
                  </div>
                </td>
              </tr>
            </tfoot>

          </table>
        </div>

      </div>
    </div>
  </div>
</div>
