<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h3>Project review</h3>
      </div>
      <div class="ibox-content">
        <div class="row">
          <div class="col-lg-9">
            <%= render partial: "layouts/errors", object: @project, as: 'form' %>
            <%= bootstrap_form_for(@project,
                    url: { :action => "review" },
                    method: :put,
                    layout: :horizontal,
                    inline_errors: false,
                    html: { class: 'project-form' },
                    label_col: "col-sm-3",
                    control_col: "col-sm-9") do |f| %>

              <%= render partial: "projects",  locals: { f: f, project: @project } %>
              
              <%= render partial: "resources", locals: { f: f, project: @project } %>

              <div class="form-group" style="margin-top: 20px;">
                <div class="col-sm-9 col-sm-offset-3">
                  <%= button_tag(type: "submit", class: "btn btn-primary") do %>
                    <i class="fa fa-check"></i> Save
                  <% end %>
                  <%= link_to project_path, :class => 'btn btn-default' do %>
                    <i class="fa fa-times"></i> Cancel
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="col-lg-3">
            <fieldset>
              <legend>Project information</legend>
              <div class="form-group">
                <label class="control-label">Organisation name</label>
                <p class="form-control-static"><%= @project.organisation_name %></p>
              </div>
              <div class="form-group">
                <label class="control-label">Contact name</label>
                <p class="form-control-static"><%= @project.contact_name %></p>
              </div>
              <div class="form-group">
                <label class="control-label">Telephone</label>
                <p class="form-control-static"><%= @project.contact_phone %></p>
              </div>
            </fieldset>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
