
<div class="row">
  <div class="col-lg-12">

    <div class="ibox float-e-margins">

      <div class="ibox-title">
        <div class="ibox-tools pull-right">
        </div>
        <h2>Users</h2>
      </div>

      <div class="ibox-content" style="display: block;">

        <% if can? :create, User %>
          <%= link_to new_admin_user_path, :class => 'btn btn-primary btn-sm' do %>
            <i class="fa fa-plus"></i> Add a user
          <% end %>
        <% end %>

        <div class="table-responsive">
          <table class="table table-striped table-responsive">

            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Last sign-in</th>
                <th>Links</th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.name %> </td>
                <td><%= user.email %> </td>
                <td><%= user.role %> </td>
                <td><%= user.current_sign_in_at %> </td>
                <td>
                  <%= link_to admin_user_path(user), :class => '' do %>
                  <i class="fa fa-info-circle"></i> View details
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>

            <tfoot>
              <tr>
                <td colspan="6">
                  <div class="pull-right">
                  </div>
                </td>
              </tr>
            </tfoot>

          </table>
        </div>

      </div>
    </div>
  </div>
</div>
