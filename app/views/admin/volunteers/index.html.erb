
<div class="row">
  <div class="col-lg-12">

    <div class="ibox float-e-margins">

      <div class="ibox-title">
        <div class="ibox-tools pull-right">
        </div>
        <h2>Volunteers</h2>
      </div>

      <div class="ibox-content">

        <div class="table-responsive">
          <table class="table table-striped table-responsive">

            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Age category</th>
                <th>Family size</th>
                <th>Email confirmed?</th>
                <th>Last sign-in</th>
                <th>Links</th>
              </tr>
            </thead>

            <tbody>
            <% if @volunteers.size > 0 %>
              <% @volunteers.each do |volunteer| %>
              <tr>
                <td><%= volunteer.name %> </td>
                <td><%= volunteer.email %> </td>
                <td><%= volunteer.mobile %> </td>
                <td><%= volunteer.humanized_age_category %> </td>
                <td><%= volunteer.family_size %> </td>
                <td><%= yes_no_icon volunteer.confirmed? %> </td>
                <td><%= volunteer.current_sign_in_at %> </td>
                <td>
                  <%= link_to admin_volunteer_path(volunteer), :class => '' do %>
                  <i class="fa fa-info-circle"></i> View details
                  <% end %>
                </td>
              </tr>
              <% end %>
            <% else %>
              <tr><td colspan="8"><em>No volunteers found</em></td></tr>
            <% end %>
            </tbody>

          </table>
        </div>

      </div>
    </div>
  </div>
</div>
