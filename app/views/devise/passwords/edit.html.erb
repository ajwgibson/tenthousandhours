<h2>Change your password</h2>

<%= render partial: "layouts/errors", object: resource, as: 'form' %>

<%= bootstrap_form_for(resource, as: resource_name,
    url: password_path(resource_name), html: { method: :put }) do |f| %>

  <%= f.hidden_field :reset_password_token %>

  <%= f.password_field :password, label: 'New password', autofocus: true, autocomplete: "off",
      help: @minimum_password_length ? "#{@minimum_password_length} characters minimum" : '' %>

  <%= f.password_field :password_confirmation, label: 'Confirm new password', autocomplete: "off" %>

  <div class="actions">
    <%= f.submit "Change my password", class: 'btn btn-primary' %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
