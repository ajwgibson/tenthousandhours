<h2>Confirm mobile number</h2>
<p>
  Please enter the code you received by SMS to confirm that we have the correct
  mobile number to contact you with in future.
</p>

<% if @error %>
  <div id="error_expl" class="panel panel-danger">
    <div class="panel-heading">
      <h3 class="panel-title">Error</h3>
    </div>
    <div class="panel-body">
      <ul>
        <li><%= @error %></li>
      </ul>
    </div>
  </div>
<% end %>

<%= bootstrap_form_tag url: do_confirm_mobile_url, method: :post do |f| %>

  <%= f.text_field :code, value: @code, label: 'Code', label_class: 'required' %>

  <div class="actions">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>

<% end %>
