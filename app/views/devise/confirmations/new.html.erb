<h2>Resend confirmation instructions</h2>

<%= render partial: "layouts/errors", object: resource, as: 'form' %>

<%= bootstrap_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>

  <%= f.email_field :email, label: 'Email', autofocus: true,
        value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions", class: 'btn btn-primary' %>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
