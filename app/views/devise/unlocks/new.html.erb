<h2>Resend unlock instructions</h2>

<%= render partial: "layouts/errors", object: resource, as: 'form' %>

<%= bootstrap_form_for(resource, as: resource_name,
    url: unlock_path(resource_name), html: { method: :post }) do |f| %>

  <%= f.email_field :email, label: 'Email', autofocus: true %>

  <div class="actions">
    <%= f.submit "Resend unlock instructions", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
